<?php
    echo"<center><font size=7>Notas</center></font>";
    
    $n1 = $_GET["n1"];
    $n2 = $_GET["n2"];
    $n3 = $_GET["n3"];
    
    echo"<br>A av1 é: $n1";
    echo"<br>A av2 é: $n2";
    echo"<br>A av3 é: $n3";
    
    $media = ($n1 + $n2 + $n3) /2;
    
    echo"<br>A media da av1, av2 e av3 é: $media";
    
?>

